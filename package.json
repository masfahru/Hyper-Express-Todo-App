{
  "name": "microservice-boilerplate",
  "version": "1.0.0",
  "description": "Nodejs microservice boilerplate",
  "main": "dist/main.js",
  "author": "Imam Fahrur Rofi",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.x",
    "yarn": "1.x"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "postbuild": "rimraf node_modules && yarn install --production",
    "build": "yarn && rimraf dist && cross-env NODE_ENV=production tsc --diagnostics",
    "dev": "nodemon src/main.ts",
    "dev:websocket": "nodemon src/websocket/server.ts",
    "migrate:make": "knex migrate:make",
    "migrate": "knex migrate:latest",
    "prestart": "knex migrate:latest",
    "start": "concurrently \"node dist/websocket/server.js\" \"node dist/main.js\""
  },
  "dependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "hyper-express": "^6.4.5",
    "knex": "^2.3.0",
    "mysql2": "^2.3.3",
    "rimraf": "^3.0.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@1.22.19"
}
